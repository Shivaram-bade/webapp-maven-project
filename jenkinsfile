pipeline {
    agent any
        environment{
            PATH = "$PATH:/opt/apache-maven-3.9.8/bin"
    }

    stages {
        stage('gitcode') {
            steps {
               
                git branch: 'main', credentialsId: '30bca632-5186-4b9d-823b-ef7076983819', url: 'https://github.com/Shivaram-bade/webapp-maven-project.git'
            }
        }
        stage('Build'){
            steps{
                sh 'mvn clean package'
            }
        }
    }
}
